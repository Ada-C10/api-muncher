<div class="item3">
<section class="cards-container">

      <section class="card">
        <img class="card-img-top" src="<%= @recipe.image %>" alt="Card image cap">

        <div class="card-body">
          <h5 class="card-title"><%=link_to @recipe.name, recipe_path(r: @recipe.uri) %></h5>
        </div>
</section>
</div>

<div class="item4">
<section class="card">
<table style="height: 100px;">
  <tbody>
  <h3> Ingredients List </h3>
    <tr>
        <% @recipe.ingredientLines.each do |ingredientLine| %>
      <td class="align-baseline"><%= ingredientLine %></td>
    </tr>
    <% end %>
  </tbody>

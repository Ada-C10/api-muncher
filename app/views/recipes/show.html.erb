<h2><%= @recipe.name %></h2>

<p><%= link_to 'Source', @recipe.url, target: "_blank" %>
</p>

  <div class="img">
    <%= image_tag(@recipe.photo, alt: "Food image: #{@recipe.name}") %>
  </div>


  <div class="details_vertical">
    <h3>Ingredients:</h3>
    <ul>
    <% @recipe.ingredients_list.each do |i| %>
    <li><%= i %></li>
    <% end %>
    </ul>
  </div>

  <div class="details_horizontal">

    <h3>Dietary Info:</h3>
    <ul>
    <% @recipe.dietary_info.each do |d| %>
    <li><%= d %></li>
    <% end %>
    </ul>

    <h3>Health Info:</h3>
    <ul>
    <% @recipe.health_info.each do |h| %>
    <li><%= h %></li>
    <% end %>
    </ul>

</div>

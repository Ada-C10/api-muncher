<div class="wrapper">
<div class="item2">
<section class="card">
<table style="height: 100px;">
  <tbody>
  <h3> Health Labels </h3>
    <tr>
        <% @recipe.healthLabels.each.each do |healthLabels| %>
      <td class="align-baseline"><%= healthLabels %></td>
    </tr>
    <% end %>
  </tbody>
</table>

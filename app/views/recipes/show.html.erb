<% if @recipe %>
  <%= @recipe.label %>
  <%= @recipe.image %>
  <a href=<%=@recipe.url%>>Source</a>
  <ul>
    <% @recipe.ingredientLines.each do |ingredient| %>
      <li><%=ingredient%></li>
    <% end %>
  </ul>
  <ul>
    <% @recipe.healthLabels.each do |label| %>
      <li><%=label%></li>
    <% end %>
  </ul>
<% else %>
  <h2 class='text-center'>0101010101010101010 <strong>recipe does not compute</strong> 0101010101010101010</h2>
  <h2 class='text-center'>010 <strong>beep beep boop</strong> 010101010101010101010 <strong>try again</strong> 010100101010</h2>
  </h2>
<% end %>

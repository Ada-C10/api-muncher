<div class = "navbar">
  <div class="nav-text mx-auto">
    <h1 class="nav-title text-center"><%=link_to "Muncher.", root_path %></h1>
    <%= form_tag(recipes_path, :method => "get") do %>
      <p><%= label_tag(:recipe, "Find your flavor...") %></p>
      <%= text_field_tag :recipe, params[:recipe] %>
      <%= submit_tag "Find", name: nil %>
    <% end %>
  </div>
</div>

<div class="container show-container col-lg-7 mx-auto">
  <h1 class="text-center show-header"><strong><%= @recipe.name %></strong></h1>
    <div class="row">
        <div class="col-md-6">
          <p><%= image_tag(@recipe.image, alt: "recipe image") %></p>
          <h5 class="show-headers"><strong>Dietary Info:</strong></h5>
          <% @recipe.dietary_info.each do |diet| %>
          <ul class="dietary_info">
            <li><%= diet %></li>
          </ul>
          <% end %>
        </div>
        <div class="col-md-6">
          <h4 class="show-headers"><strong>Ingredients:</strong></h4>
          <% @recipe.ingredients.each do |ingredient| %>
          <ul class="ingredients">
            <li><%= ingredient %></li>
          </ul>
          <% end %>
        </div>
    </div>
  <p></p>
</div>

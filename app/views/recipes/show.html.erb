<section class="addymame-search-bar">

  <a href="<%= root_path %>"><h1>Addymame</h1></a>
  <%= form_tag recipes_index_path, method: :get do%>
  <div class="addymame-search-bar-search">
    <%= text_field_tag(:search) %>
    <div class="addymame-search-bar-button">
      <%= submit_tag("Search") %>
    </div>
  </div>
  <% end %>
  <div class="flash-message">
    <% flash.each do |key, value| %>
    <%= value %>
    <% end %>
  </div>

</section>


<div class="recipe-name">
  <a href="<%= @recipe.source_url %>"><h1><%= @recipe.name %></h1></a>
</div>
<div class="recipe-by">
  <a href="<%= @recipe.source_url %>"><h1><small>By: <%= @recipe.source %></small></h1></a>
</div>
<section class="recipe-show-section">
<div class ="recipe-image-and-ingredients">
  <%= image_tag @recipe.image %>
  <ul>
    <h3>Ingredients</h3>
    <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
    <% end %>
  </ul>
</div>
  <h3>Dietary Labels</h3>
  <ul>
  <% @recipe.dietary.each do |label| %>
  <li class="dietary-labels"><%= label %></li>
  <% end %>
</ul>
<a href="<%= @recipe.source_url %>">See Recipe</a>

</section>
<footer class = "edamam-footer">
  <div id="edamam-badge" data-color="white"></div>
</footer>

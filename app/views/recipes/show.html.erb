<section class="addymame-search-bar">

<a href="<%= root_path %>"><h1>Addymame</h1></a>
<%= form_tag recipes_index_path, method: :get do%>

<%= text_field_tag(:search) %>
<%= submit_tag("Search") %>

<% end %>

</section>
<section class="recipe-show-section">

<a href="<%= @recipe.source_url %>"><h1><%= @recipe.name %>
<small>By: <%= @recipe.source %></small></h1></a>
<%= image_tag @recipe.image %>
<h3>Ingredients</h3>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
  <li><%= ingredient %></li>
  <% end %>
</ul>
<h3>Dietary Labels</h3>
<ul>
  <% @recipe.dietary.each do |label| %>
  <li><%= label %></li>
  <% end %>
</ul>
<a href="<%= @recipe.source_url %>">See Recipe</a>

</section>
<footer class = "edamam-footer">
  <div id="edamam-badge" data-color="white"></div>
</footer>

<!DOCTYPE html>
<html>
<body>


  <section class="recipes-list">

    <header>
    <p><%= link_to "Back to Search", recipes_homepage_path %></p>


      <h4><strong><a href="<%=@recipe.url%>" target="_blank"><%= @recipe.name %></a></strong></h4>
    </header>


    <table cellpadding="20">

      <thead>
        <tr>
          <th>Ingredients</th>
          <th>Dietary Information</th>
          <th>Health Information</th>

        </tr>
      </thead>


      <tbody>
        <tr>
          <td><% if @recipe %>
            <ul>
              <% @recipe.ingredients.each do |ing| %>
              <li>
                <%= ing %>
              </li>
              <% end %>
            </ul>
            <% end %></td>
            <td><% if @recipe %>
              <ul>
                <% @recipe.diet_labels.each do |label| %>
                <li>
                  <%= label %>
                </li>
                <% end %>
              </ul>
            <% end %></td>
            <td><% if @recipe %>
                <ul>
                  <% @recipe.health_labels.each do |label| %>
                  <li>
                    <%= label %>
                  </li>
                  <% end %>
                </ul>
            <% end %></td>
        </tr>
      </tbody>

    </table>

  </section>

</body>
</html>

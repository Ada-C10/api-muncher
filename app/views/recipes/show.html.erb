<%= render partial: "header_search" %>

<div class="d-flex flex-column text-center">
  <h2>
    <%= "#{@recipe.label}" %>
  </h2>
  <p>by<%= " #{@recipe.source}" %>
  </p>
</div>

<div class="d-flex flex-row">
  <span class="recipes-list-entry"><%= image_tag(@recipe.image) %></span>
  <div class="recipes-list-entry">
    <h3>Ingredients</h3>
    <ul>
    <% @recipe.ingredients.each do |ingredient|%>
      <li>
        <%= ingredient %>
      </li>
    <% end %>
    </ul>
    <p class="recipe-link">
      <%= link_to "See Full Recipe HERE", @recipe.url, target: :_blank %>
    </p>
  </div>
</div>

<div class="recipes-list-entry">
  <h3>Dietary Labels</h3>
    <ul>
      <% @recipe.diet.each do |diet_label|%>
      <li>
        <%= diet_label %>
      </li>
      <% end %>
    </ul>
</div>

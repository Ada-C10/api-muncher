<h2> <%= link_to @recipe.label, @recipe.url %></h2>

<section class="container">
  <h3 class="user-votes__header">Ingredients</h3>

  <div>
    <%=image_tag(@recipe.image, alt: @recipe.label)%>
    <div>

      <div>

        <ol>
          <% @recipe.ingredients.each do |ingredient| %>
          <li><%= ingredient %></li>
          <%end%>
        </ol>

      </div>



      <div>

        <ol>
          <% @recipe.health.each do |health| %>
          <li><%= health %></li>
            <%end%>
          </ol>

        </div>

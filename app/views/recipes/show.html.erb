<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <h2><strong>Recipe Details </strong></h2>
</nav>
<container class="general">
  <section class="detail">
    <div>
      <h2><%=@recipe.label%></h2>
    </div>

    <div>
      <img src="<%= @recipe.image %>" alt="recipe image">
    </div>

    <section class="ingredient">
      <h3>Ingredients</h3>
      <ul class="list">
        <%@recipe.ingredientLines.each do |ingredient|%>
        <li>
          <%=ingredient%>
        </li>
        <%end%>
      </ul>
    </section>
    <section>
      <h4>Health Labels</h4>
      <ul class="list">
        <%@recipe.healthLabels.each do |label|%>
        <li>
          <%=label%>
        </li>
        <%end%>
      </ul>
    </section>
    <section>
      <h4>Diet Labels</h4>
      <ul class="list">
        <%@recipe.dietLabels.each do |label|%>
        <li>
          <%=label%>
        </li>
        <%end%>
      </ul>
    </section>
  </section>
</section>
</container>

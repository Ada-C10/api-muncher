<div class="recipe-detail">
  <div>


    <strong><h2><%= @recipe.name.capitalize%> Recipe:</h2></strong>  </div>
  <div>
    <ul>
      <span>
        <li><strong>Ingredients: </strong>
          <ol>
            <% @recipe.ingredients.each do |i|%>
            <li><%= i %></li>
            <% end %>
          </ol>
        </li>
        <li><strong>Dietary Info: </strong>
          <% @recipe.dietary_info.each do |i|%>
          <span id="sentence"><%= "#{i}" %></span>
          <% end %>
        </li>
        <li><strong>Health Info: </strong><% @recipe.health_info.each do |i|%>
          <span id="sentence"><%= "#{i}" %></span>
          <% end %>
        </li>
        <li><%=link_to "Recipe Source", @recipe.url, class: "btn btn-primary" %></li>
      </span>
    </ul>
  </div>
</div>

<div class="container">
<% unless @recipes.empty? %>
  <div class="container">
    <div class="row">
      <% @recipes.each do |recipe| %>
          <div class="col-md-3 col-sm-6">
            <div class="product-grid6">
              <div class="product-image6">
                <%=link_to image_tag("#{recipe.image}", alt: "#{recipe.label} plated"), show_recipe_path(recipe.uri), class: "product-img img-thumbnail", width: "30", height: "30" %>
              </div>
              <div class="product-content">
                <h3 class="title"><%= recipe.label %></h3>
              </div>
              <ul class="social">
                <li><a href="/recipes/<%=recipe.uri%>" data-tip="Recipe Details"><i class="fa fa-cutlery fa-rotate-90" aria-hidden="false"></i></a></li>
              </ul>
            </div>
          </div>
        <% end %>
    </div>
  </div>
  <%= will_paginate @recipes, renderer: BootstrapPagination::Rails %>
<% end %>
</div>



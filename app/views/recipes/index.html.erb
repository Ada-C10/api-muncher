<section class="addymame-search-bar">

<a href="<%= root_path %>"><h1>Addymame</h1></a>
<%= form_tag recipes_index_path, method: :get do%>

  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>

<% end %>

</section>

<section class="addymame-search-results">

<h2>Results for "<%= @search_param.capitalize %>"</h2>
  <% if @recipes %>
    <% @recipes.each do |recipe| %>
    <a href="<%= recipes_show_path(recipe.id) %>">
      <ul>
        <li>
          <%= image_tag recipe.image %>
          <%= recipe.name %>
        </li>
      </ul>
    </a>
    <% end %>
  <% end %>
  <%= will_paginate @recipes, previous_label: h("<"), next_label: h(">") %>
</section>

<footer class = "edamam-footer">
  <div id="edamam-badge" data-color="white"></div>
</footer>





<header class = "header">
  <h1>MUNCHER</h1>
  <%= render partial: "/layouts/form" %>
</header>

<main class = "main-container">
  <h2>Results for "<%= params[:input] %>"</h2>
<%= will_paginate @recipes %>
  <div class = "recipe-grid">


    <% if @recipes %>

    <ul>

      <% @recipes.each do |recipe| %>

      <li class = "individual-recipe">

        <% url = recipe["recipe"]["uri"] %>
        <% pattern = /recipe_(.*)/ %>
        <% uri = pattern.match(url) %>

        <img src = <%= recipe["recipe"]["image"]%>
        alt = <%= recipe["recipe"]["label"] %>
        class = "recipe-image">

        <h3><%= link_to recipe["recipe"]["label"], recipe_path(uri[1]) %></h3>


      </li>

      <% end %>

    </ul>

    <% end %>


  </div>




  <p><%= @recipes.count %></p>
</main>

<footer>

  <div id="edamam-badge" data-color="white"></div>
</footer>

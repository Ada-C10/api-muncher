<%= paginate @recipes %>


<% if @recipes %>

  <ul class='container'>
    <% @recipes.each do |recipe| %>
      <div class="col-md-6">
        <div class="media">
          <div class = "media-left">
            <p class = "media-object"><%= image_tag(recipe.image)%></p>
          </div>
          <div class ="media-body">
            <p> <%= recipe.label%>  </p>
            <p><%= link_to "view recipe details", recipe_path(recipe.uri),target: :_blank %></p>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
<% end %>
</section>

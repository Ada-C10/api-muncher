<%= render partial: "header" %>
<h2>List of Recipes</h2>


<ul class="container">
        <% if @recipes %>
        <% @recipes.each do |recipe| %>
        <div class="card-deck">
          <div class="col-md-12">
            <div class="card">
        <%= link_to image_tag("#{recipe.image}", alt: "#{recipe.label}", class: "card-img-top"), recipe_path(recipe.id) %>

        <%= link_to "#{recipe.label}", recipe_path(recipe.id), class: "card-img-overlay" %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>

<%= will_paginate @recipes %>

</ul>

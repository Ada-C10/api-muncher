<!DOCTYPE html>
<html>
<body>


<section class="recipes-list">

    <header>
      <p><%= link_to "Back to Search", recipes_homepage_path %></p>

      <h4>Recipes</h4>

  <% if @recipes %>
    <ul>
      <% @recipes.each do |recipe| %>
        <li>
          <%= link_to recipe.name, recipe_path(recipe.id) %>
          <%= image_tag recipe.image %>

        </li>
      <% end %>
    </ul>
  <% end %>

    <%= will_paginate @posts %>
</section>

</body>
</html>

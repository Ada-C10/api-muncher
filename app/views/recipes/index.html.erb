<div class = "navbar">
  <div class="nav-text mx-auto">
    <h1 class="nav-title text-center"><%=link_to "Muncher.", root_path %></h1>
    <%= form_tag(recipes_path, :method => "get") do %>
      <p><%= label_tag(:recipe, "Find your flavor...") %></p>
      <%= text_field_tag :recipe, params[:recipe] %>
      <%= submit_tag "Find", name: nil %>
    <% end %>
  </div>
</div>

</header>

<% if @recipes %>
<div class="container index-container mx-auto">
  <% @recipes.each do |recipe| %>
    <div class="card index-card bg-white">
      <%= image_tag(recipe.image, alt: "recipe image", class: "card-img-top" ) %>
      <div class="card-body">
        <p class="card-title text-center"><strong><%=link_to recipe.name, recipe_path(recipe.id), class: "recipe" %></strong></p>
      </div>
    </div>
  <%end%>
</div>
<% end %>

<%= will_paginate @recipes, class: "text-center paginate" %>

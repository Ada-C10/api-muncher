<h1 class="muncher-header"><%= link_to "Munchies", root_path %></h1>
<%= render partial: "header" %>

<article class="recipes-list">
  <h2>List of Recipes</h2>


        <% if @recipes %>
        <% @recipes.each do |recipe| %>
        <div class="card-columns">
          <div class="col-sm-12">
            <div class="card">
        <%= link_to image_tag("#{recipe.image}", alt: "#{recipe.label}", class: "card-img-top"), recipe_path(recipe.id) %>

        <%= link_to "#{recipe.label}", recipe_path(recipe.id), class: "card-img-overlay" %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>

<%= will_paginate @recipes %>

</article>

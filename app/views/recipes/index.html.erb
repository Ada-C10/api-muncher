<%= render partial: 'recipes/brand_header' %>

<div class="results">


  <h2>Results for "<%=session[:search]%>"</h2>
  <section class="card-deck">
    <% @recipes.each do |recipe| %>
    <div class="box">
      <div class="card text-center">
        <%= link_to image_tag(recipe.image), recipe_path(link: recipe.link) , alt: "photo of #{recipe.name}", class: "card-img-top"  %>
        <div class="card-body">
          <p><%= recipe.name %></p>
        </div>
      </div>
    </div>
    <% end %>
  </section>
  <div class="paginate">
    <%= will_paginate @recipes, :page_links => false %>
  </div>

</div>

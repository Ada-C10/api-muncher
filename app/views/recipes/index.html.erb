<% if @recipes.any? %>

<h3 class="p-3 text-center"> search results: <strong><%=@keyword%></strong> </h3>
<h4 class='p-3 text-center'>
  <% if @health_labels.any? %>
    <% @health_labels.each do |label| %>
      <span> [<%=label%>] </span>
    <% end %>
  <% end %>
</h4>
<br>
  <%= will_paginate @recipes, renderer: BootstrapPagination::Rails %>

<section class='recipes-container'>
  <% @recipes.each do |recipe| %>

    <div class="card shadow p-3 mb-5 bg-white rounded" style="width:18%">
      <%= link_to image_tag(recipe.image, alt: "#{recipe.label}", class: "card-img-top"), recipe_path(recipe.id) %>
      <div class="card-body">
        <h5 class="card-title text-center"><%= recipe.label %></h5>
      </div>
    </div>

  <% end %>
<% else %>
  <section class='not_found'>

      <% if @keyword.blank?%>
        <p class='text-center'>
          010101010 <strong>blank</strong> search does not compute 01010101010101010101
        </p>
      <%else%>
        <p class='text-center'>
          <%str = "010101010 #{@keyword} search does not compute 010101010101010101010101010".truncate(60, omission: "")%>
          <%result = str.split(" #{@keyword} ")%>
          <%=result[0]%> <strong><%=@keyword%></strong> <%=result[1]%>
        </p>

        <% if @health_labels.any? %>
          <% @health_labels.each do |label| %>
          <br>
          <p class='text-center'>
            <%str = "01010" %>
            <%rand(1..11).times { str += "10"}%>
            <%str +=  " with #{label} 01010101010101010101010101010101010101010101010101010101010"%>
            <%str = str.truncate(60, omission: "")%>
            <%result = str.split(" #{label} ")%>
            <%=result[0]%> <strong><%=label%></strong> <%=result[1]%>
          </p>

          <% end %>
        <% end %>

      <%end%>

    <br>
    <p class='text-center'>0101010 please search again 0101010101010 boop beep boop 010</p>
    <br>
    <p class='text-center'>0101010101010101010101010101010101010 end of message 0101010</p>
  </section>

<% end %>

</section>

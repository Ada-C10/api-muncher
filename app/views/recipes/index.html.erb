<%= render partial: "header_search" %>

<section class="recipes-list">
  <h1>Results for <%= "#{@food_search.upcase}" %></h1>

  <ul>
    <% if @recipes %>
      <% @recipes.each do |recipe| %>
        <li>
          <%= recipe.label %>
        </li>
      <% end %>
  </ul>
  <% else %>
    <p>
      No recipes match <%= "#{@food_search}" %>
    </p>
  <% end %>
</section>

<%= render partial: "form" %>

<section class="results-body">
  <% if @recipes != nil %>
  <h2 class="search-heading"> Your search results: <h2>
  <section>

    <div class="card-group-container">
      <% @recipes.each do |recipe| %>
      <div class="card w-25 card-container">
        <%= image_tag recipe.image, class: "card-img-top"%>
        <div class="card-body">
          <h3 class="card-title"> <%= link_to recipe.name, recipe_path(recipe.id) %> </h3>
          <p class="card-text"><small class="text-muted"><%= link_to "Recipe Source ->", recipe.url, target: :_blank %></small></p>
        </div>
      </div>
      <% end %>
    </div>
  </section>
  <div class="pagination-box">
    <%= paginate @recipes %>
  </div>
  <% elsif @error %>
  <svg-icon><src href="sprite.svg#si-glyph-ghost" /></svg-icon>
    <h2 class="warning"><%=@error %></h2>
  <% else %>
  <svg-icon><src href="sprite.svg#si-glyph-ghost" /></svg-icon>
  <h2 class="search-heading"> Don't be shy! Try searching for some recipes. <h2>
  <% end %>
</section>

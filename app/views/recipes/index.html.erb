<section class = 'recipe-search-results'>
  <% if !@recipes.empty? %>
    <!-- <ul> -->
      <% @recipes.each do |recipe| %>
      <div class ="card-columns">
          <div class = "card recipe-card">
            <%= image_tag recipe.image, alt: recipe.name, class: "card-img-top" %>
            <%=link_to(recipe.name, recipe_path( recipe.id))%>
          </div>
      </div>
      <% end %>

  <% else %>
    <p>There were no recipes found containing the term(s) <%= params[:q] %>.</p>
  <% end %>

  <%= will_paginate @recipes %>
</section>

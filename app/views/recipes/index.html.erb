
 <h1 class="indexhead">Search Results: <%= @keyword %> </h1>
 <% if @recipes.empty? %>
    <h1> No Results Found </h1>
    <% else %>
  <div class="row mb-5">
    <% @recipes.each do |recipe| %>
      <div class="col-sm-4 mb-4 text-center d-flex justify-content-around">
        <div class="card" style="width: 15rem;">
          <img src="<%= recipe.image %>" width="500" alt="<%= recipe.label %>" class="card-img-top">
          <%= link_to "#{recipe.label}", show_path(recipe.uri) %>
        </div>
      </div>
        <% end %>
        <%end %>
         <section class="pag">
        <%= paginate @recipes %>
        <div id="edamam-badge" data-color="white"></div>
      </section>

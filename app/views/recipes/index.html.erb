
  <section class="recipe-finder">
    <h1>Recipe Finder</h1>
    <%= form_tag recipe_index_path, method: :get do %>
    <!-- # recipe_index_path, method: "get" do %> -->
    <%= label_tag(:search_terms, "Enter Ingredient") %>
      <%= text_field_tag ( :search_terms ) %>
      <%= submit_tag ( "Search" ) %>
    <% end %>
  </section>

  <section id="recipe_results">
    <h1><%= "Recipes for #{params["search_terms"].capitalize}" %></h1>
    <% if @recipes %>
    <div class="recipe_container">

        <% @recipes.each do |recipe| %>
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src= <%= "#{recipe.image}" %> alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"> <%= "#{recipe.name}" %> </h5>

              <a href="#" class="btn btn-primary"><%= "See Recipe" %></a>
            </div>
          </div>

            <div class="card" style="width: 18rem;">
          <% end %>
      </div>

      <% else %>
        <h1>Sorry, no results found</h1>
    <% end %>
  </section>

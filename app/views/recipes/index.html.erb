<!-- Image and text -->
<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href=#>
    <img src="https://image.flaticon.com/icons/svg/481/481486.svg" width="30" height="30" class="d-inline-block align-top" alt="Muncher Logo">
    Muncher
  </a>

  <%= form_tag recipes_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
  <%= text_field_tag(:search, nil, placeholder: 'Search', class: "form-control mr-sm-2") %>
  <%= submit_tag("Search", class: "btn btn-outline-success my-2 my-sm-0") %>
  <% end %>

</nav>


  <div class="recipe-cards">
    <% @recipes.each do |recipe| %>
    <div class="card w-25 card-padding text-center">
      <%=image_tag(recipe.image, class:"card-img-top", alt: "#{recipe.label}")%>
      <div class="card-body card-padding">
        <h5 class="card-title"><%= link_to recipe.label, recipe_path(recipe.id)%></h5>
      </div>
      <div class="card-footer">
        <%recipe.health.each do |dietary|%>
        <span class="badge badge-info"><%=dietary%></span>
        <%end%>
      </div>
    </div>
    <% end %>
  </div>




<%= paginate @recipes %>

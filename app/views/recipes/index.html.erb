<div class="container recipe">
  <h1 class="text-center mt-5 mb-5">List of Recipes for: <%= @search[:search] %></h1>
  <% if @search[:diet] %>
    <ul class="list-inline text-center mb-5">
      <% @search[:diet].each do |label| %>
        <li class="list-inline-item"><%= label %></li>
      <% end %>
    </ul>
  <% end %>

  <% if @recipes %>
    <div class="row mb-5">
      <% @recipes.each do |recipe| %>
        <div class="col-sm-6 col-md-4 mb-4 text-center">
          <div class="card">
            <%= link_to image_tag("#{recipe.image}", class: "card-img-top", style: 'width:500;', alt: "#{recipe.label}"), recipe_path(recipe.id) %>
          </div>
          <div class="card-body">
            <p class="card-title"><%= link_to recipe.label, recipe_path(recipe.id) %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @recipes %>
    </div>
    <%= will_paginate @recipes, :container => false %>
  </div>
</div>

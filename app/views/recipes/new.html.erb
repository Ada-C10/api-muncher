<div id="home">
  <div class="landing-text">
    <div class= "row">
      <div class="col-6"></div>
      <div class="col-4">
        <h1 class="mb-5">Muncher</h1>
        <%= form_tag recipes_path, method: :get do %>
        <%= text_field_tag(:search, nil, placeholder: 'What flavor are you looking for?', class: "form-control form-control-lg search feedback-input", id: "search") %>
        <br />
        <%= submit_tag("Look Up Recipes", class: "btn btn-default btn-lg mt-2") %>

        <% end %>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
</div>

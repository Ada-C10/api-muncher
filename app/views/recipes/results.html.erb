<%= render partial: "layouts/search_bar" %>

<section class="section-body" id="results">
<h2> Results for "<%= @query %>"</h2>


<% if @recipes.empty? %>
  <h3> No results found. </h3>
<% else %>
  <ul>
  <% @recipes.each do |recipe| %>
    <li>
      <%= image_tag recipe.photo, alt: recipe.name %>

      <%= form_tag recipe_path(recipe.name), method: "get" do %>
        <%= hidden_field_tag(:uri, recipe.uri ) %>
        <%= submit_tag(recipe.name, {class: 'recipe-link btn btn-link'}) %>
      <% end %>
    </li>
  <% end %>
  </ul>
  <%= will_paginate @recipes %>
<% end %>
</section>

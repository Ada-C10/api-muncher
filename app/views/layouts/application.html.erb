<!DOCTYPE html>
<html>
<head>
  <title>ApiMuncher</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
  <script src="https://developer.edamam.com/attribution/badge.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if flash[:result_text] or flash[:messages] %>
  <section class="alert__container">
    <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
      <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
      <% if flash[:messages] %>
      <ul>
        <% flash[:messages].each do |name, problems| %>
        <% problems.each do |problem| %>
        <li><%= name %>: <%= problem %></li>
        <% end %>
        <% end %>
      </ul>
      <% end %>
    </div>
  </section>
  <% end %>

  <%= yield %>

  <footer class="navbar_brand fixed-bottom text-center navbar-light">
    <div id="edamam-badge" data-color="badge" class="navbar_brand fixed-bottom text-center navbar-light"></div>
  </footer>
</body>


</html>

<!DOCTYPE html>
<html>
  <head>
    <title>ApiMuncher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- attribution -->
    <script src="https://developer.edamam.com/attribution/badge.js"></script>

  </head>

  <body>

    <% unless current_page?(root_path) %>
  <header>
    <nav class="navbar navbar-light bg-light navbar-expand-md fixed-top scrolling-navbar">
        <h2 class="navbar-text pb-0"><%= link_to "Muncher", root_path %></h2>
<%= render partial: "search_form", locals: { action_type: "Search" } %>
    </nav>
  </header>
<% end %>

    <% if flash[:result_text] or flash[:messages] %>
    <section class="alert__container">
      <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
        <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
      </div>
    </section>
    <% end %>

    <main>
    <%= yield %>
    </main>

    <footer>
      <div id="edamam-badge" data-color="white"></div>
    </footer>

  </body>

</html>

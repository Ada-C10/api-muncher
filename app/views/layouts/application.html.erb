<!DOCTYPE html>
<html>
  <head>
    <title>ApiMuncher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaijaan" rel="stylesheet">
    <script src="https://developer.edamam.com/attribution/badge.js"></script>
  </head>

  <body>
    <% if params[:controller] != "pages" %>
      <header>
        <nav class="navbar navbar-light bg-light navbar-expand-md fixed-top scrolling-navbar">
            <h2 class="navbar-text pb-0">Muncher</h2>

          <%= form_tag search_path, method: :get, class: "form-inline ml-4" do %>
            <div class="md-form my-0">
              <%= text_field_tag(:search, params[:search], class: "form-control mr-sm-2", placeholder: "Search") %>
            </div>
          <% end %>
        </nav>
      </header>
    <% end %>

    <% if flash[:status] %>
     <section class="row status alert alert-<%= flash[:status] %>">
       <h3>
         <%= flash[:message] %>
       </h3>
     </section>
    <% end %>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="row">
        <div class="col-sm-12 text-center">
          <!-- badge, light, white, transparent -->
          <div id="edamam-badge" data-color="white"></div>
        </div>
      </div>
    </footer>
  </body>
</html>

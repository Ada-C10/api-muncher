<div id="bg">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1 class="display-1 text-center mt-5 text-color pt-2">Muncher</h1>


        <%= form_tag search_path, method: :get do %>
          <div class="md-form my-0">
            <%= label_tag :search, "Find Your Flavor", class: "col-form-label text-color"%>

            <div class="mt-1">
              <%= check_box_tag "diet[]", "high-protein" %>
              <%= label_tag :highprotein, "High-Protein", class: "text-color mr-4"  %>

              <%= check_box_tag "diet[]", "low-carb"%>
              <%= label_tag :lowcarb, "Low-Carb", class: "text-color mr-4" %>

              <%= check_box_tag "diet[]", "high-fiber"%>
              <%= label_tag :highfiber, "High-Fiber", class: "text-color mr-4x" %>
            </div>

            <%= text_field_tag(:search, params[:search], class: "form-control mt-3", placeholder: "Search") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
